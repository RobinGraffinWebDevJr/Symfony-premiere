{% extends 'base.html.twig' %}

{% block title propertys.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
    
                </div>
                <div class="col-md-4">
            <h1>{{ propertys.title }}</h1>
            <h2>{{ propertys.rooms }} pièces - {{ propertys.surface }} m²</h2>
            <div class="text-primary" style="font-size: 4rem;font-weight: bold;">{{ propertys.formattedPrice }} €</div>
            <a href="#" class="btn btn-primary">Contacter l'agence</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
      
        <p>
            {{ propertys.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristique</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ propertys.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Pièces</td>
                        <td>{{ propertys.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Chambres</td>
                        <td>{{ propertys.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Etage</td>
                        <td>{{ propertys.floor }}</td>
                        <tr>
                            <td>Chauffage</td>
                            <td>{{ propertys.heatType }}</td>
                        </tr>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
            </div>
        </div>
    </div>
{% endblock %}